{
  "hosting": {
    "public": "public",
    "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
    "headers": [
      {
        "source": "/icons/**",
        "headers": [
          { "key": "Cache-Control", "value": "public, max-age=31536000, immutable" },
          { "key": "Content-Type", "value": "image/png" }
        ]
      },
      {
        "source": "/img/**",
        "headers": [
          { "key": "Cache-Control", "value": "public, max-age=31536000, immutable" }
        ]
      }
    ],
    "cleanUrls": true,
    "rewrites": [
      { "source": "/verifyPayPal", "function": "verifyPayPal" },
      { "source": "**", "destination": "/index.html" }
    ]
  }
}