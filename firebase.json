{
  "hosting": {
    "public": "public",
    "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
    "headers": [
      {
        "source": "/icons/**",
        "headers": [
          { "key": "Cache-Control", "value": "public, max-age=31536000, immutable" }
        ]
      },
      {
        "source": "/img/**",
        "headers": [
          { "key": "Cache-Control", "value": "public, max-age=31536000, immutable" }
        ]
      }
    ],
    "rewrites": [
      { "source": "/(courses|dashboard|admin|profile|settings|certs|transcripts)", "destination": "/index.html" },
      { "source": "/(courses|dashboard|admin|profile|settings|certs|transcripts)/**", "destination": "/index.html" }
    ]
  }
}